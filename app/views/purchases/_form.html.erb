<%= render 'shared/errors', object: @purchase %>

<%= form_for @purchase do |f| %>
<div class="form-group">
  <%= f.label :vendor, class: "col-sm-2 control-label" %>
  <%= f.select :vendor, Vendor.vendors_by(current_user).collect { |c| c.name }, {include_blank: ''} %>
</div>

<div class="form-group">
  <%= f.label :amount, class: "col-sm-2 control-label" %>
  <%= f.text_field :amount, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :description, class: "col-sm-2 control-label" %>
  <%= f.text_area :description, class: "form-control" %>
</div>

<%= f.submit 'Save', class: "btn btn-primary btn-block links" %>

<% end %>

<%= link_to 'Back', purchases_path, class: "btn btn-block btn-info" %>
