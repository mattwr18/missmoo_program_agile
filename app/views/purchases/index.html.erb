<div class='container'>
  <div class='row'>
    <div class='col-xs-4'>
      <h1>Purchases</h1>
    </div>
    <div class='col-xs-8'>
      <%= link_to 'Create a new purchase', new_purchase_path, class: 'btn btn-info create-btn' %>
    </div>
  </div>
</div>
<table class='table table-hover table-bordered'>
  <thead>
    <tr>
      <th>Id</th>
      <th>Date</th>
      <th>Vendor</th>
      <th>Total</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody id='purchases'>
    <%= render @purchases %>
  </tbody>
</table>
<div class='container'>
  <h2>Total purchases: <%= number_to_currency @purchases.sum(:total) %></h2>
</div>
