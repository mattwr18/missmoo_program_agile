<div class="nested-fields container">
  <div class="field form-group">
    <%= f.label :ingredients_list, class: "col-sm-2 control-label" %>
    <%= f.select :products, Ingredient.all.collect { |c| c.name }, {include_blank: ''} %><br>
    <%= f.check_box :_destroy %>
    <%= link_to_remove_association 'remove ingredient', f %>
  </div>

  <div class="form-group">
    <%= f.label :ingredient, class: 'ingredient-field-name' %>
    <%= f.text_field :name, class: 'form-control ingredient-amount-field', disabled: true %>
    <%= link_to 'Add new ingredient', '', id: 'add-new-ingredient', class: 'btn' %>
  </div>

  <div class="form-group">
    <%= f.label :amount, class: "ingredient_field_amount" %>
    <%= f.number_field :amount, class: 'form-control ingredient_amount_field' %><br>

    <%= f.label :amount_type, class: "ingredient_field_amount_type" %>
    <%= f.select :amount_type, ['gram(s)', 'kilo(s)', 'liter(s)', 'millilter(s)'], {include_blank: ''}, class: 'form-control ingredient_amount_type_field' %><br>
  </div>
  </div>
</div>
