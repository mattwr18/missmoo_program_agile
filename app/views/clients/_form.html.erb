<div class="alert-secondary">
  <% if @client.errors.any? %>
  <h2>The following errors prevented the record from being created</h2>
    <% @client.errors.full_messages.each do |msg| %>
      <ul>
        <li><%= msg %></li>
      </ul>
    <% end %>
  <% end %>
</div>

<%= form_for @client do |f| %>
<div class="form-group">
  <%= f.label :name, class: "col-sm-2 control-label" %>
  <%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :address, class: "col-sm-2 control-label" %>
  <%= f.text_area :address, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :obs, class: "col-sm-2 control-label" %>
  <%= f.text_area :obs, class: "form-control" %>
</div>

<%= f.submit 'Save', class: "btn btn-primary btn-block" %>

<% end %>

<%= link_to 'Back', clients_path, class: "btn btn-block btn-info" %>
