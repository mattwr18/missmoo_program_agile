<tr>
  <td><%= sale.id %></td>
  <td><%= sale.created_at.strftime(t('date.formats.default')) %></td>
  <td><%= sale.client %></td>
  <td>
    <% sale.products.each do |product| %>
      <%= product.name %><br>
    <% end %>
  </td>
  <td><%= number_to_currency sale.amount %></td>
  <td><%= sale.description %></td>
  <td><%= link_to t('index.links.show'), sale_path(sale) %></td>
  <td >
    <%= link_to t('index.links.edit'), edit_sale_path(sale), id: "edit_#{sale.id}", class: "fa fa-pencil i fa-2x index_icons" %>
  </td>
  <td >
    <%= link_to t('index.links.delete'), sale_path(sale), method: :delete, id: "delete_sale_#{sale.id}_from_index", class: "fa fa-trash-o fa-2x index_icons", data: { confirm: "Are you sure?"} %>
  </td>
</tr>
