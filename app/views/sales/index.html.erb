<div class='container'>
  <div class='row'>
    <div class='col-xs-4'>
      <h1><%= t('index.title.sales') %></h1>
    </div>
    <div class='col-xs-8'>
      <%= link_to t('index.create_button.sales'), new_sale_path, class: 'btn btn-info create-btn'%>
    </div>
  </div>
</div>
<table class='table table-hover table-bordered'>
  <thead>
    <tr>
      <th><%= t('index.table.id') %></th>
      <th><%= t('index.table.date') %></th>
      <th><%= t('index.table.client') %></th>
      <th><%= t('index.table.products') %></th>
      <th><%= t('index.table.total') %></th>
      <th><%= t('index.table.description') %></th>
    </tr>
  </thead>
  <tbody id='sales'>
    <%= render @sales %>
  </tbody>
</table>

<%= paginate @sales, theme: 'twitter-bootstrap-4' %>

<div class='container'>
  <h2><%= t('index.totals.sales') %> <%= number_to_currency @sales.sum(:amount) %></h2>
</div>
