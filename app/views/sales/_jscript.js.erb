<script>
  <% product_array.each do |product| %>
  var total = 0;
  var products = [];
  $(".product-<%= product.id %>").click(function() {
    var updatedTotal = total += parseInt("<%= product.price %>");
    $("#sale-amount").val(updatedTotal);
    products.push(parseInt("<%= product.id %>"));
    $("input#sale_product_ids").val(products);
  });
  <% end %>
</script>
