<div class="alert-danger">
  <% if @sale.errors.any? %>
  <h2>The following errors prevented the record from being created</h2>
    <% @sale.errors.full_messages.each do |msg| %>
      <ul>
        <li><%= msg %></li>
      </ul>
    <% end %>
  <% end %>
</div>

<%= form_for @sale do |f| %>
<div class="form-group">
  <%= f.label :client, class: "col-sm-2 control-label" %>
  <%= f.select :client, Client.clients_by(current_user).collect { |c| c.name }, {include_blank: ''} %>
</div>

<div class="form-group">
  <%= f.label :amount, class: "col-sm-2 control-label" %>
  <%= f.text_field :amount, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :description, class: "col-sm-2 control-label" %>
  <%= f.text_area :description, class: "form-control" %>
</div>

<%= f.submit 'Save', class: "btn btn-primary btn-block" %>

<% end %>

<%= link_to 'Back', sales_path, class: "btn btn-block btn-info" %>
