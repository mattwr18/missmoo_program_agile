<%= render 'shared/errors', object: @sale %>

<%= form_for @sale do |f| %>

<div class="form-group">
  <%= f.label :client, class: "col-sm-2 control-label" %>
  <%= f.select :client, Client.clients_by(current_user).collect { |c| c.name }, {include_blank: ''} %>
</div>

<div class="form-group">
  <%= f.label :products, class: "col-sm-2 control-label" %>
  <%= f.collection_check_boxes :product_ids, Product.all, :id, :name do |b| %>
    <div class="collection-check-box">
      <%= b.check_box %>
      <%= b.label %>
    </div>
    <% end %>
</div>


<div class="form-group">
  <%= f.label :quantity, class: "col-sm-2 control-label" %>
  <%= f.text_field :quantity, class: "form-control" %>
</div>

<div class="form-group">
  $<%= f.label :amount, class: "col-sm-2 control-label" %>
  <%= f.text_field :amount, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :description, class: "col-sm-2 control-label" %>
  <%= f.text_area :description, class: "form-control" %>
</div>

<%= f.submit 'Save', class: "btn btn-primary btn-block links" %>

<% end %>

<%= link_to 'Back', sales_path, class: "btn btn-block btn-info" %>
