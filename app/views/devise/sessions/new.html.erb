<div class="container">
  <h2><%= t 'devise.sessions.log_in' %>
  <%= link_to_unless_current flag_icon(:br), { locale: 'pt-BR' } %>
  <%= link_to_unless_current flag_icon(:us), { locale: :en }%>
  </h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, label: I18n.t('simple_form.labels.password'), required: true %>
      <%= f.input :remember_me, label: I18n.t('simple_form.labels.remember_me'), as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, label: I18n.t('simple_form.labels.log_in') %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
