<!DOCTYPE html>
<html>
<head>
  <title>SME Organizer</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <% if user_signed_in? %>
    <ul class="nav nav-tabs justify-content-between">
      <li class="navbar-brand flags">
        <%= link_to_unless_current flag_icon(:br), { locale: 'pt-BR' } %>
      </li>
      <li class="navbar-brand">
        <%= link_to_unless_current flag_icon(:us), { locale: :en }%>
      </li>
      <li class="nav-item ml-auto">
        <%= active_link_to 'Home', root_path, active: :exclusive, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= active_link_to t('navbar.sales'), sales_path, active: :exclusive, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= active_link_to t('navbar.purchases'), purchases_path, active: :exclusive, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= active_link_to t('navbar.products'), products_path, active: :exclusive, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= active_link_to t('navbar.clients'), clients_path, active: :exclusive, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= active_link_to t('navbar.vendors'), vendors_path, active: :exclusive, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= active_link_to t('navbar.log_out'), destroy_user_session_path, active: :exclusive, method: :delete, class: 'nav-link'  %>
      </li>
    </ul>
  <% end %>

  <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <%= yield %>
</body>
</html>
