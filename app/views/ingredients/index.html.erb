<div class='container'>
  <div class='row'>
    <div class='col-xs-4'>
      <h1>Ingredients</h1>
    </div>
    <div class='col-xs-8'>
      <%= link_to 'Create a new ingredient', new_ingredient_path, class: 'btn btn-info create-btn' %>
    </div>
  </div>
</div>
<table class='table table-hover table-bordered'>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody id='ingredients'>
    <%= render @ingredients %>
  </tbody>
</table>
