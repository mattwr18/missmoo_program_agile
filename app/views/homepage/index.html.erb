<h1 class="text-center">SME Organizer</h1>
<div class="container">
  <div class="jumbotron">
    <h2>Your small or medium enterprise organizer</h2>
    <h2>Total sales: <%= @sales.sum(:amount) %><br></h2>
    <h2>Total purchases: <%= @purchases.sum(:amount) %><br></h2>
    <h2>Profit: <%= @profit %></h2><br>
    <div class="row">
      <div class="col-md-12 text-center">
        <%= link_to 'Add sale', new_sale_path, class: "btn btn-block btn-dark links" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 text-center">
        <%= link_to 'Add purchase', new_purchase_path, class: "btn btn-block btn-primary" %>
      </div>
    </div>
  </div>
</div>
